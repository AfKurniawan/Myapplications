<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_overlapTop="64dp"
    tools:context="com.androprogrammer.tutorials.activities.Listactivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_mainlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/row_mainlist_item"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/fab_margins"
            android:layout_marginRight="@dimen/fab_margins"
            android:src="@mipmap/ic_action_social_share"
            app:borderWidth="0dp"
            app:elevation="@dimen/elevation_normal"
            app:fabSize="mini"
            app:layout_anchor="@id/recycler_mainlist"
            app:layout_anchorGravity="bottom|right|end"
            app:pressedTranslationZ="12dp"
            app:rippleColor="@android:color/transparent"/>

    </FrameLayout>

</RelativeLayout>
